			tagActiveTextColor="#e54e09" 
			tagTextColor="$infoText"
			tagActiveBgColor="$info" 
			tagBgColor="$info" 
			tagBorderRadius="100px"
			tagPadding="5px 13px" 
			tagTextSize="14px">
