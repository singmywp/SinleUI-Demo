				<sn-checkbox text="良好"></sn-checkbox>
				<sn-checkbox text="优秀"></sn-checkbox>
			</sn-checkbox-group>
			<sn-checkbox-group v-model="v2">
				<sn-checkbox-tag text="及格"></sn-checkbox-tag>
